# ===========================================
# WP VITE CONFIGURATION EXAMPLE
# ===========================================
# Copy this file to .env and customize for your environment

# ===========================================
# WORDPRESS ENVIRONMENT
# ===========================================

# Environment type (development, staging, production, local)
WP_ENVIRONMENT_TYPE=development

# Enable WordPress debug mode
WP_DEBUG=true

# Enable debug logging
WP_DEBUG_LOG=true

# Display errors on screen (development only)
WP_DEBUG_DISPLAY=true

# ===========================================
# VITE SERVER CONFIGURATION
# ===========================================

# Vite development server settings
VITE_SERVER_HOST=localhost
VITE_SERVER_PORT=3000
VITE_SERVER_HTTPS=false

# Enable/disable Vite dev server checking
VITE_DEV_SERVER_ENABLED=true

# Timeout for dev server connectivity check (in seconds)
VITE_DEV_CHECK_TIMEOUT=1

# ===========================================
# HOT MODULE REPLACEMENT (HMR)
# ===========================================

# HMR WebSocket configuration
VITE_HMR_HOST=localhost
VITE_HMR_PORT=3000
VITE_HMR_CLIENT_PORT=3000
VITE_HMR_HTTPS=false
VITE_HMR_PROTOCOL=ws

# ===========================================
# BUILD CONFIGURATION
# ===========================================

# Build output directory (relative to plugin/theme root)
VITE_OUT_DIR=assets

# Vite manifest file location (relative to build output directory)
VITE_MANIFEST_FILE=.vite/manifest.json

# ===========================================
# CACHE BUSTING
# ===========================================

# Enable timestamp-based cache busting for production assets
VITE_CACHE_BUSTING_ENABLED=true

# Alternative cache busting configuration (legacy)
CACHE_BUSTING_ENABLED=true

# ===========================================
# REACT DEVELOPMENT
# ===========================================

# Enable React Refresh support for hot reloading
VITE_REACT_REFRESH=true

# ===========================================
# DOCKER CONFIGURATION
# ===========================================
# These settings are for Docker environments
# The container names should match your docker-compose.yml

# Docker container name for Vite server (internal communication)
# VITE_SERVER_HOST=node

# Public-facing host for HMR (browser connections)
# VITE_HMR_HOST=localhost

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log level (debug, info, notice, warning, error, critical, alert, emergency)
WP_LOGGER_LEVEL=debug

# Log retention period in days
WP_LOGGER_RETENTION_DAYS=30

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Standard WordPress database configuration

DB_NAME=wordpress
DB_USER=wordpress
DB_PASSWORD=wordpress
DB_HOST=localhost
DB_CHARSET=utf8mb4
DB_COLLATE=

# ===========================================
# SECURITY KEYS
# ===========================================
# Generate your keys at: https://api.wordpress.org/secret-key/1.1/salt/

AUTH_KEY='put your unique phrase here'
SECURE_AUTH_KEY='put your unique phrase here'
LOGGED_IN_KEY='put your unique phrase here'
NONCE_KEY='put your unique phrase here'
AUTH_SALT='put your unique phrase here'
SECURE_AUTH_SALT='put your unique phrase here'
LOGGED_IN_SALT='put your unique phrase here'
NONCE_SALT='put your unique phrase here'

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================

# Disable file editing from WordPress admin
DISALLOW_FILE_EDIT=true

# Disable plugin/theme installation/updates from admin
DISALLOW_FILE_MODS=false

# Disable automatic updates
AUTOMATIC_UPDATER_DISABLED=false

# Disable WordPress cron (use system cron instead)
DISABLE_WP_CRON=false

# Memory limit
WP_MEMORY_LIMIT=256M

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

# Enable Query Monitor (if installed)
QM_ENABLE_CAPS_PANEL=true

# Enable Xdebug (for PHP debugging)
XDEBUG_MODE=debug

# Node environment for build tools
NODE_ENV=development