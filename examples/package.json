{
  "name": "my-wordpress-plugin",
  "version": "1.0.0",
  "description": "My WordPress Plugin with Vite",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:watch": "vite build --watch",
    "clean": "rimraf assets",
    "lint:js": "eslint resources/js --ext .js,.ts,.jsx,.tsx",
    "lint:css": "stylelint 'resources/**/*.{css,scss}'",
    "format": "prettier --write 'resources/**/*.{js,ts,jsx,tsx,css,scss,json}'"
  },
  "dependencies": {
    "vite": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "sass": "^1.69.0",
    "stylelint": "^16.0.0",
    "typescript": "^5.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ]
}